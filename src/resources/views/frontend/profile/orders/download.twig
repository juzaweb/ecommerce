<a href="{{ url('profile/ecommerce/orders') }}" class="btn btn-primary btn-sm mb-3">{{ __('Back') }}</a>

<table class="table module-table">
    <thead>
        <tr>
            <th>{{ __('Product') }}</th>
            <th style="width: 35%">{{ __('Download Links') }}</th>
        </tr>
    </thead>
    <tbody>

    {% for item in order.downloadable_products %}
        <tr>
            <td colspan="2">{{ item.title }}</td>
        </tr>
        {% for link in item.download_links %}
            <tr>
                <td>{{ link.name }}</td>
                <td><a href="{{ link.download_url }}" target="_blank">{{ __('Download') }}</a></td>
            </tr>
        {% endfor %}
    {% endfor %}

    {% if order.downloadable_products is empty %}
        <tr>
            <td colspan="2">{{ __('No results found') }}</td>
        </tr>
    {% endif %}
    </tbody>
</table>
